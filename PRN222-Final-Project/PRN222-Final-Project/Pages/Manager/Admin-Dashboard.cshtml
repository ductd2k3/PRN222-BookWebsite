@page
@{
    Layout = "_AdminLayout";
}
@model PRN222_Final_Project.Pages.Manager.Admin_DashboardModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/admin_dashboard.css" asp-append-version="true" />
</head>
<div class="header">
    <span>Dashboard</span>
    <span class="user-info"><i class="fas fa-user me-2"></i> Admin</span>
</div>

<!-- Stats -->
<div class="stats">
    <div class="stat-card">
        <i class="fas fa-book"></i>
        <h3>Tổng Sách</h3>
        <p>@(Model.totalBooks)</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-shopping-cart"></i>
        <h3>Đơn Hàng</h3>
        <p>@(Model.totalOrder)</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-users"></i>
        <h3>Khách Hàng</h3>
        <p>@(Model.totalUsers)</p>
    </div>
    <div class="stat-card">
        <i class="fas fa-money-bill"></i>
        <h3>Doanh Thu</h3>
        <p>@(Model.totalPrice)</p>
    </div>
</div>

<!-- Recent Orders -->
<div class="recent-orders">
    <h2>Đơn Hàng Gần Đây</h2>
    <table>
        <thead>
            <tr>
                <th>Mã Đơn</th>
                <th>Khách Hàng</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>#00123</td>
                <td>Nguyễn Văn A</td>
                <td>250.000đ</td>
                <td>Đã Giao</td>
            </tr>
            <tr>
                <td>#00124</td>
                <td>Trần Thị B</td>
                <td>180.000đ</td>
                <td>Đang Xử Lý</td>
            </tr>
            <tr>
                <td>#00125</td>
                <td>Lê Văn C</td>
                <td>300.000đ</td>
                <td>Chờ Xác Nhận</td>
            </tr>
        </tbody>
    </table>
</div>