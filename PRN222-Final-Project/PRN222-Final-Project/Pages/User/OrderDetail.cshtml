@page
@model PRN222_Final_Project.Pages.User.OrderDetailModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/OrderDetail.css" asp-append-version="true" />
</head>
<!-- Order Detail Section -->
<div class="container order-detail-container">
    <div class="order-header">
        <h2 class="order-id">Đơn hàng #DH001</h2>
        <span class="order-status completed">Đã giao</span>
    </div>

    <!-- Order Info -->
    <div class="order-info">
        <div class="order-info-item">
            <label>Ngày đặt hàng:</label>
            <p>01/03/2025</p>
        </div>
        <div class="order-info-item">
            <label>Địa chỉ giao hàng:</label>
            <p>123 Đường Sách, Quận 1, TP. Hồ Chí Minh</p>
        </div>
    </div>

    <!-- Order Products -->
    <h3 class="mt-4 mb-3">Sản phẩm trong đơn hàng</h3>
    <div class="order-products">
        <!-- Product 1 -->
        <div class="order-product">
            <img src="https://images.unsplash.com/photo-1512820790803-83ca734da794" alt="Book 1">
            <div class="order-product-info">
                <h5 class="order-product-title">Cuốn Sách Tương Lai</h5>
                <p>Số lượng: 1</p>
                <p class="order-product-price">150.000đ</p>
            </div>
        </div>
        <!-- Product 2 -->
        <div class="order-product">
            <img src="https://images.unsplash.com/photo-1544947950-fa07a98d237f" alt="Book 2">
            <div class="order-product-info">
                <h5 class="order-product-title">Hành Trình Vũ Trụ</h5>
                <p>Số lượng: 2</p>
                <p class="order-product-price">500.000đ</p>
            </div>
        </div>
    </div>

    <!-- Order Summary -->
    <div class="order-summary">
        <div class="order-summary-item">
            <span>Tạm tính:</span>
            <span>650.000đ</span>
        </div>
        <div class="order-summary-item">
            <span>Phí vận chuyển:</span>
            <span>30.000đ</span>
        </div>
        <div class="order-summary-item total">
            <span>Tổng cộng:</span>
            <span>680.000đ</span>
        </div>
    </div>
</div>