@page
@model PRN222_Final_Project.Pages.User.RegisterModel
@{
}

<style>
    /* Register Form */
    .register-container {
        background: var(--light-bg);
        border-radius: 15px;
        box-shadow: var(--shadow-neon);
        padding: 2rem;
        margin: 4rem auto;
        max-width: 400px;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #D1D5DB;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        font-size: 1rem;
        transition: border-color 0.3s;
    }

        .form-input:focus {
            border-color: var(--neon-orange);
            outline: none;
            box-shadow: 0 0 5px rgba(255, 87, 51, 0.5);
        }

    .btn-register {
        background: var(--neon-orange);
        border: none;
        padding: 0.75rem;
        border-radius: 25px;
        font-weight: 600;
        color: white;
        width: 100%;
        transition: all 0.3s;
        box-shadow: var(--shadow-neon);
    }

        .btn-register:hover {
            background: #F97316;
            transform: scale(1.05);
        }

    .form-link {
        color: var(--neon-orange);
        text-decoration: none;
        transition: all 0.3s;
    }

        .form-link:hover {
            color: #F97316;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
    }
    /* Alert Message */
    .alert-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
    }
</style>
<div class="alert-container">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<div class="register-container">
    <h2 class="text-center mb-4">Đăng Ký</h2>
    <form method="post" asp-antiforgery="true">
        <div class="mb-3">
            <input asp-for="Input.Username" class="form-input" placeholder="Tên đăng nhập" required />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Input.Email" class="form-input" placeholder="Email" required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Input.FullName" class="form-input" placeholder="Họ và tên" required />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Input.Password" type="password" class="form-input" placeholder="Mật khẩu" required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Input.ConfirmPassword" type="password" class="form-input" placeholder="Xác nhận mật khẩu" required />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-register">Đăng Ký</button>
    </form>
    <p class="text-center mt-3">
        Đã có tài khoản? <a href="/User/Login" class="form-link">Đăng nhập ngay</a>
    </p>
</div>