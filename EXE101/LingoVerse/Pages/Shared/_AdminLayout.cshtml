<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/LingoVerse.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminLayOut.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
    @{
        string currentPath = Context.Request.Path;
    }
    <!-- Sidebar -->
    <div class="sidebar">
        <h3 class="text-center mb-4" style="color: #fff; text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);">Admin Panel</h3>
        <ul class="nav flex-column">
            <li class="nav-item"><a href="/Manager/Admin-Dashboard" class="nav-link @(currentPath == "/Manager/Admin-Dashboard" ? "active" : "")"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a></li>
            <li class="nav-item"><a href="/Manager/Admin-ManageBlog" class="nav-link @(currentPath == "/Manager/Admin-ManageBlog" ? "active" : "")"><i class="fas fa-newspaper me-2"></i> Quản lý bài báo</a></li>
            <li class="nav-item"><a href="/Manager/Admin-ManageLanguage" class="nav-link @(currentPath == "/Manager/Admin-ManageLanguage" ? "active" : "")"><i class="fas fa-users me-2"></i> Quản lý ngôn ngữ</a></li>
            <li class="nav-item"><a href="/Manager/Admin-ManageLevel" class="nav-link @(currentPath == "/Manager/Admin-ManageLevel" ? "active" : "")"><i class="fas fa-ad me-2"></i> Quản lý cấp độ</a></li>
            <li class="nav-item"><a href="#" class="nav-link"><i class="fas fa-sign-out-alt me-2"></i> Đăng xuất</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Dashboard</h2>
                <div>
                    <span class="me-3"><i class="fas fa-user-circle"></i> Admin</span>
                    <button class="btn btn-custom"><i class="fas fa-bell"></i></button>
                </div>
            </div>
        </div>

        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
