@page
@{
    Layout = "_AdminLayout";
}
@model LingoVerse.Pages.Manager.Admin_ManageBlogModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/Manage_Blog.css" asp-append-version="true" />
</head>
<!-- Search and Filter -->
<div class="container-fluid">
    <div class="search-bar">
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Tìm kiếm bài báo..." aria-label="Search">
            <button class="btn" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
    <div class="filter-selects">
        <select class="form-select">
            <option value="">Chọn ngôn ngữ</option>
            <option value="english">Tiếng Anh</option>
            <option value="french">Tiếng Pháp</option>
            <option value="japanese">Tiếng Nhật</option>
        </select>
        <select class="form-select">
            <option value="">Chọn cấp độ</option>
            <option value="beginner">Sơ cấp (A1-A2)</option>
            <option value="intermediate">Trung cấp (B1-B2)</option>
            <option value="advanced">Nâng cao (C1-C2)</option>
        </select>
    </div>

    <!-- Articles Table -->
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title">Danh sách bài báo</h5>
                <button class="btn btn-custom" onclick="window.location.href='/Manager/Admin-ManageBlogDetail'"
                ><i class="fas fa-plus me-2"></i> Thêm bài báo
            </button>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tiêu đề</th>
                        <th>Ngôn ngữ</th>
                        <th>Cấp độ</th>
                        <th>Ngày đăng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>AI Breakthrough in 2049</td>
                        <td>English</td>
                        <td>Intermediate</td>
                        <td>08/03/2025</td>
                        <td>
                            <button class="btn btn-custom btn-sm"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Une Nouvelle Ère d'IA</td>
                        <td>French</td>
                        <td>Beginner</td>
                        <td>07/03/2025</td>
                        <td>
                            <button class="btn btn-custom btn-sm"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>2049年のAI革命</td>
                        <td>Japanese</td>
                        <td>Advanced</td>
                        <td>06/03/2025</td>
                        <td>
                            <button class="btn btn-custom btn-sm"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled"><a class="page-link" href="#" aria-label="Previous">«</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#" aria-label="Next">»</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>