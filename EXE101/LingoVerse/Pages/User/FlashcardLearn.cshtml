@page
@model LingoVerse.Pages.User.FlashcardLearnModel
@{
}
<style>
    body {
        color: #e0e1dd;
    }
    .main-content {
        flex: 1;
        padding: 40px 0;
    }

    .flashcard-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .mode-tabs {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .mode-tab {
        background: #1b263b;
        color: #e0e1dd;
        padding: 10px 20px;
        margin: 0 5px;
        border-radius: 20px;
        cursor: pointer;
        transition: background 0.3s, color 0.3s;
    }

        .mode-tab.active {
            background: #00b4d8;
            color: #fff;
        }

        .mode-tab:hover {
            background: #415a77;
        }

    .flashcard {
        background: #1b263b;
        border-radius: 15px;
        padding: 40px;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        cursor: pointer;
        position: relative;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0 10px 20px rgba(119, 141, 169, 0.5);
        margin-bottom: 20px;
    }

        .flashcard.flipped {
            transform: rotateY(180deg);
        }

    .flashcard-front, .flashcard-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: bold;
    }

    .flashcard-back {
        transform: rotateY(180deg);
        color: #00b4d8;
    }

    .navigation {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 20px;
    }

    .nav-btn {
        background: #415a77;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        color: #e0e1dd;
        transition: background 0.3s;
    }

        .nav-btn:hover {
            background: #778da9;
        }

    .word-list {
        background: #1b263b;
        border-radius: 15px;
        padding: 20px;
        max-height: 300px;
        overflow-y: auto;
    }

    .word-item {
        display: flex;
        justify-content: space-between;
        padding: 10px;
        border-bottom: 1px solid #415a77;
    }

        .word-item:last-child {
            border-bottom: none;
        }
</style>
<div class="main-content">
    <div class="container">
        <div class="flashcard-container">
            <!-- Mode Tabs -->
            <div class="mode-tabs">
                <div class="mode-tab active" onclick="setMode('flashcard')">Flashcard</div>
                <div class="mode-tab" onclick="setMode('learn')">Học</div>
                <div class="mode-tab" onclick="setMode('test')">Kiểm tra</div>
            </div>

            <!-- Flashcard -->
            <div class="flashcard" onclick="flipCard()">
                <div class="flashcard-front">Hello</div>
                <div class="flashcard-back">Xin chào</div>
            </div>

            <!-- Navigation -->
            <div class="navigation">
                <button class="nav-btn" onclick="prevCard()">Trước</button>
                <button class="nav-btn" onclick="nextCard()">Tiếp</button>
            </div>

            <!-- Word List -->
            <div class="word-list">
                <div class="word-item">
                    <span>Hello</span>
                    <span>Xin chào</span>
                </div>
                <div class="word-item">
                    <span>Goodbye</span>
                    <span>Tạm biệt</span>
                </div>
                <div class="word-item">
                    <span>Thank you</span>
                    <span>Cảm ơn</span>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const flashcards = [
        { front: "Hello", back: "Xin chào" },
        { front: "Goodbye", back: "Tạm biệt" },
        { front: "Thank you", back: "Cảm ơn" }
    ];
    let currentIndex = 0;

    function flipCard() {
        const card = document.querySelector('.flashcard');
        card.classList.toggle('flipped');
    }

    function updateCard() {
        const cardFront = document.querySelector('.flashcard-front');
        const cardBack = document.querySelector('.flashcard-back');
        cardFront.textContent = flashcards[currentIndex].front;
        cardBack.textContent = flashcards[currentIndex].back;
        document.querySelector('.flashcard').classList.remove('flipped');
    }

    function prevCard() {
        if (currentIndex > 0) {
            currentIndex--;
            updateCard();
        }
    }

    function nextCard() {
        if (currentIndex < flashcards.length - 1) {
            currentIndex++;
            updateCard();
        }
    }

    function setMode(mode) {
        const tabs = document.querySelectorAll('.mode-tab');
        tabs.forEach(tab => tab.classList.remove('active'));
        event.target.classList.add('active');
        // Logic cho các chế độ khác (Học, Kiểm tra) có thể thêm sau
        console.log(`Chuyển sang chế độ: ${mode}`);
    }

    // Khởi tạo thẻ đầu tiên
    updateCard();
</script>