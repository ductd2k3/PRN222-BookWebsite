@page
@model LingoVerse.Pages.User.FlashcardListModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/FlashcardList.css" asp-append-version="true" />
</head>
<div class="container mt-4">
    <!-- Search Bar -->
    <div class="search-bar">
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Tìm kiếm bộ thẻ ghi nhớ..." aria-label="Search">
            <button class="btn" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>

    <!-- Create Button -->
    <button class="create-btn" onclick="window.location.href='/User/FlashcardAdd'">
        <i class="fas fa-plus-circle"></i> Tạo Bộ Thẻ
    </button>

    <!-- Flashcard Sets List -->
    <div class="row">
        <div class="col-12">
            <a href="/User/FlashcardLearn" class="text-decoration-none">
                <div class="flashcard-set">
                    <h5>English Vocabulary - Beginner</h5>
                    <p>100 từ vựng cơ bản dành cho người mới học tiếng Anh.</p>
                    <p class="set-info"><i class="fas fa-layer-group"></i> 100 thẻ | <i class="far fa-clock"></i> Cập nhật 1 giờ trước</p>
                </div>
            </a>

            <a href="#" class="text-decoration-none">
                <div class="flashcard-set">
                    <h5>French Verbs - Intermediate</h5>
                    <p>Các động từ tiếng Pháp thường dùng ở cấp độ trung cấp.</p>
                    <p class="set-info"><i class="fas fa-layer-group"></i> 50 thẻ | <i class="far fa-clock"></i> Cập nhật 2 ngày trước</p>
                </div>
            </a>

            <a href="#" class="text-decoration-none">
                <div class="flashcard-set">
                    <h5>Japanese Kanji - Advanced</h5>
                    <p>Hán tự Nhật Bản dành cho người học nâng cao.</p>
                    <p class="set-info"><i class="fas fa-layer-group"></i> 200 thẻ | <i class="far fa-clock"></i> Cập nhật 1 tuần trước</p>
                </div>
            </a>
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item disabled"><a class="page-link" href="#" aria-label="Previous">«</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#" aria-label="Next">»</a></li>
        </ul>
    </nav>
</div>